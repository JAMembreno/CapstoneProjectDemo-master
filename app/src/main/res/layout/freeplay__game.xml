<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Freeplay_Game"
    android:background="@drawable/game_mode"
    android:id="@+id/gamelayout">

    <TextView
        android:id="@+id/hit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HIT!"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/center_circle"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/missed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MISSED!"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/center_circle"
        android:visibility="invisible"

        />

    <ImageView
        android:id="@+id/center_circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/circle_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/topRight_circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/circle_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/topLeft_circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/circle_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/bottomRight_circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/circle_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/singleNote"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/blue_note"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"
        />

    <ImageView
    android:id="@+id/bottomLeft_circle"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/circle_text"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="250dp"
        android:text="@string/Score"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.664"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/miss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lives"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.251"
        app:layout_constraintLeft_toRightOf="@id/score"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/heart1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart_full"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/miss"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:id="@+id/heart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart_full"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/heart1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:id="@+id/heart3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart_full"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/heart2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:id="@+id/heart4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart_full"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/heart3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:id="@+id/heart5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart_full"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/heart4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/heart6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart_full"
        app:layout_constraintLeft_toRightOf="@id/miss"
        app:layout_constraintTop_toBottomOf="@id/heart1" />

    <ImageView
        android:id="@+id/heart7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart_full"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/heart6"
        app:layout_constraintTop_toBottomOf="@id/heart2"/>
    <ImageView
        android:id="@+id/heart8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart_full"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/heart7"
        app:layout_constraintTop_toBottomOf="@id/heart3" />
    <ImageView
        android:id="@+id/heart9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart_full"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/heart8"
        app:layout_constraintTop_toBottomOf="@id/heart4" />
    <ImageView
        android:id="@+id/heart10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart_full"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/heart9"
        app:layout_constraintTop_toBottomOf="@id/heart5" />


    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="54dp"
        android:layout_height="52dp"
        android:background="@drawable/button_pause"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintLeft_toRightOf="@id/score"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>